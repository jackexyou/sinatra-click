

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Clicker</title>
</head>
<body>

	<h1>Available Rewards!</h1>

	<% @rewards.each do |reward| %>
	<form action='/rewards' method="POST">
		
		<h3>
			<%if logged_in? && @user.id == session[:user_id]%> 
				<input type="hidden" name="name" value="<%= reward.name %>">
				<input type="submit" value="Buy">
			<% end %>

			<%= reward.name %> - <%= reward.cost %> Clicks
		</h3>
	</form>
		
	<% end %>

	<%if logged_in? && @user.id == session[:user_id]%> 
		<a href="users/<%= @user.id %>">User page</a>
	<% end %>
</body>
</html>
